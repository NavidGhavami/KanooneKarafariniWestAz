@page
@model ServiceHost.Areas.Administration.Pages.Entrepreneur.RahyarEntrepreneur.IndexModel




@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت کارآفرینان مربی / رهیار";
}

<div class="content">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">جستجو در کارآفرینان مربی / رهیار</h3>
                </div>
                <div class="panel-body">
                    <form class="form-inline" role="form" method="get">
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.RahyarName"></label>
                            <input class="form-control" asp-for="SearchModel.RahyarName" placeholder="نام مربی / رهیار ">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.RahyarFamily"></label>
                            <input class="form-control" asp-for="SearchModel.RahyarFamily" placeholder="نام خانوادگی مربی / رهیار">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.RahyarNationalId"></label>
                            <input class="form-control" asp-for="SearchModel.RahyarNationalId" placeholder="کد ملی مربی / رهیار">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.RahyarMobile"></label>
                            <input class="form-control" asp-for="SearchModel.RahyarMobile" placeholder="شماره موبایل مربی / رهیار">
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                        <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">لیست کارآفرینان مربی / رهیار</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>نام</th>
                                        <th>نام خانوادگی</th>
                                        <th>کد ملی</th>
                                        <th>شهر محل سکونت</th>
                                        <th>موبایل</th>
                                        <th>تاریخ ثبت نام</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.RahyarEntrepreneur)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.RahyarName</td>
                                            <td>@item.RahyarFamily</td>
                                            <td>@item.RahyarNationalId</td>
                                            <td>@item.RahyarCity</td>
                                            <td>@item.RahyarMobile</td>
                                            <td>@item.CreationDate</td>
                                            <td>
                                                <a class="btn btn-warning btn-rounded waves-effect waves-light m-b-5"
                                                   href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                    <i class="fa fa-edit"></i> ویرایش
                                                </a>
                                                <a class="btn btn-purple btn-rounded waves-effect waves-light m-b-5"
                                                   href="#showmodal=@Url.Page("./Index", "GetInformation", new {id = item.Id})"
                                                   onclick="$('.modal-dialog').css('width','100%')">
                                                    <i class="fa fa-info"></i>  نمایش کامل اطلاعات
                                                </a>
                                                <a class="btn btn-pink btn-rounded waves-effect waves-light m-b-5"
                                                   asp-page-handler="DownloadResume" asp-route-id="@item.Id">
                                                    <i class="fa fa-download"></i>  دانلود رزومه
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
