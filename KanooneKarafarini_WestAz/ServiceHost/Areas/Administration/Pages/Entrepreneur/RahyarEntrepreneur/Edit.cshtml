@model EntrepreneurManagement.Application.Contract.RahyarEntrepreneur.EditRahyarEntrepreneur


@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش کارآفرین مربی / رهیار: @Model.RahyarName @Model.RahyarFamily </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RahyarName" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="RahyarName">
                    <span asp-validation-for="RahyarName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RahyarFamily" class="control-label">نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="RahyarFamily">
                    <span asp-validation-for="RahyarFamily" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="RahyarNationalId" class="control-label">کد ملی</label>
                    <input type="text" class="form-control" asp-for="RahyarNationalId">
                    <span asp-validation-for="RahyarNationalId" class="error"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="RahyarBirthDate" class="control-label">تاریخ تولد</label>
                    <input type="text" class="form-control" asp-for="RahyarBirthDate">
                    <span asp-validation-for="RahyarBirthDate" class="error"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="RahyarEducation" class="control-label">مقطع تحصیلی</label>
                    <input type="text" class="form-control" asp-for="RahyarEducation">
                    <span asp-validation-for="RahyarEducation" class="error"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="RahyarCourse" class="control-label">رشته تحصیلی</label>
                    <input type="text" class="form-control" asp-for="RahyarCourse">
                    <span asp-validation-for="RahyarCourse" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="RahyarCity" class="control-label">شهر محل سکونت</label>
                    <input type="text" class="form-control" asp-for="RahyarCity">
                    <span asp-validation-for="RahyarCity" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="RahyarPhone" class="control-label">تلفن ثابت</label>
                    <input type="text" class="form-control" asp-for="RahyarPhone">
                    <span asp-validation-for="RahyarPhone" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="RahyarMobile" class="control-label">موبایل</label>
                    <input type="text" class="form-control" asp-for="RahyarMobile">
                    <span asp-validation-for="RahyarMobile" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="RahyarAddress" class="control-label">آدرس</label>
                    <input type="text" class="form-control" asp-for="RahyarAddress" />
                    <span asp-validation-for="RahyarAddress" class="error"></span>
                </div>
            </div>
            <input type="hidden" class="form-control" asp-for="Id" value="@Model.Id" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-warning waves-effect waves-light">ویرایش </button>
    </div>
</form>
