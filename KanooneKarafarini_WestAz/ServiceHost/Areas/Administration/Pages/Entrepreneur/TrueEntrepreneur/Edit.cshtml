@model EntrepreneurManagement.Application.Contract.TrueEntrepreneur.EditTrueEntrepreneur


@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش کارآفرین حقیقی: @Model.Name @Model.Family </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Family" class="control-label">نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="Family">
                    <span asp-validation-for="Family" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="NationalId" class="control-label">کد ملی</label>
                    <input type="text" class="form-control" asp-for="NationalId">
                    <span asp-validation-for="NationalId" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label">تاریخ تولد</label>
                    <input type="text" class="form-control" asp-for="BirthDate">
                    <span asp-validation-for="BirthDate" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ActivitySubject" class="control-label">عنوان فعالیت اقتصادی</label>
                    <input type="text" class="form-control" asp-for="ActivitySubject">
                    <span asp-validation-for="ActivitySubject" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="City" class="control-label">شهر محل سکونت</label>
                    <input type="text" class="form-control" asp-for="City">
                    <span asp-validation-for="City" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">تلفن ثابت</label>
                    <input type="text" class="form-control" asp-for="Phone">
                    <span asp-validation-for="Phone" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Mobile" class="control-label">موبایل</label>
                    <input type="text" class="form-control" asp-for="Mobile">
                    <span asp-validation-for="Mobile" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Address" class="control-label">آدرس</label>
                    <input type="text" class="form-control" asp-for="Address" />
                    <span asp-validation-for="Address" class="error"></span>
                </div>
            </div>
            <input type="hidden" class="form-control" asp-for="Id" value="@Model.Id" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-warning waves-effect waves-light">ویرایش </button>
    </div>
</form>
