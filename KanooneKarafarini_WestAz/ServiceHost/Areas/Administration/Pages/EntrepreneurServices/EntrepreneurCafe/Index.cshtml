@page
@model ServiceHost.Areas.Administration.Pages.EntrepreneurServices.EntrepreneurCafe.IndexModel


@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت کافه های کارآفرینی";
}

<div class="content">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title pull-right">@ViewData["title"]</h4>
            <p class="pull-left">
                <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد کافه های کارآفرینی جدید</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">جستجو در کافه های کارآفرینی</h3>
                </div>
                <div class="panel-body">
                    <form class="form-inline" role="form" method="get">
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.CafeName"></label>
                            <input class="form-control" asp-for="SearchModel.CafeName" placeholder="نام کافه ">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.CafeCity"></label>
                            <input class="form-control" asp-for="SearchModel.CafeCity" placeholder="شهرستان">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.CafeManager"></label>
                            <input class="form-control" asp-for="SearchModel.CafeManager" placeholder="نام مدیر کافه">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.CafeLeader"></label>
                            <input class="form-control" asp-for="SearchModel.CafeLeader" placeholder="نام راهبر کافه">
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                        <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">لیست کافه های کارآفرینی</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>نام کافه</th>
                                        <th>شهرستان</th>
                                        <th>نام مدیر کافه</th>
                                        <th>نام راهبر کافه</th>
                                        <th>موبایل مدیر کافه</th>
                                        <th>موبایل راهبر کافه</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.EntrepreneurCafe)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.CafeName</td>
                                            <td>@item.CafeCity</td>
                                            <td>@item.CafeManager</td>
                                            <td>@item.CafeLeader</td>
                                            <td>@item.CafeManagerMobile</td>
                                            <td>@item.CafeLeaderMobile</td>
                                            <td>@item.CreationDate</td>
                                            <td>
                                                <a class="btn btn-warning btn-rounded waves-effect waves-light m-b-5"
                                                   href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                    <i class="fa fa-edit"></i> ویرایش
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}


