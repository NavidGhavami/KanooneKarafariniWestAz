@model EntrepreneurManagement.Application.Contract.EntrepreneurServices.IntroduceArticle.EditIntroduceArticle


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش مقاله</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">عنوان مقاله/پاورپوینت</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <select class="form-control" asp-for="StateTitle">
                        <option value="0">
                            حوزه را انتخاب کنید ...
                        </option>
                        <option value="استانی">
                            استانی
                        </option>
                        <option value="ملّی">
                            ملّی
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Photo" class="control-label">آپلود تصویر</label>
                    <input type="file" class="form-control" asp-for="Photo">
                    <span asp-validation-for="Photo" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="File" class="control-label">آپلود فایل</label>
                    <input type="file" class="form-control" asp-for="File">
                    <span asp-validation-for="File" class="error"></span>
                </div>
            </div>
        </div>
        <input asp-for="Id" type="hidden" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-warning waves-effect waves-light">ویرایش مقاله / پاورپوینت</button>
    </div>
</form>
