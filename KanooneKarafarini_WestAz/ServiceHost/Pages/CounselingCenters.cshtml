@page
@model ServiceHost.Pages.CounselingCentersModel


    @{
        ViewData["Title"] = "مراکز مشاوره کانون کارآفرینی استان آذربایجان غربی";
    }
<section class="container-fluid mt-3">
    <div class="container p-md-5 box p-4">
        <div class="row">
            <div class="col-lg-12 text-justify">
                <h4 class="mb-4 bt-color IRANSansWeb_Medium">لیست مراکز مشاوره کانون کارآفرینی استان آذربایجان غربی</h4>


                <table class="table table-bordered table-responsive table-hover table-striped">
                    <thead class="grad-bg text-white">
                        <tr>
                            <th>ردیف</th>
                            <th>نام مرکز مشاوره</th>
                            <th>حوزه فعالیت</th>
                            <th>مدیر عامل</th>
                            <th>تلفن</th>
                            <th>همراه</th>
                            <th>آدرس</th>
                            <th>توضیحات</th>

                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.CounselingCenter)
                    {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.CouncelingCenterName</td>
                            <td>@item.CouncelingCenterActivity</td>
                            <td>@item.ManagerName</td>
                            <td>@item.CouncelingCenterPhone</td>
                            <td>@item.CouncelingCenterMobile</td>
                            <td>@item.CouncelingCenterAddress</td>
                            <td>@item.Description</td>

                        </tr>
                    }

                    </tbody>
                </table>



            </div>


        </div>
    </div>
</section>