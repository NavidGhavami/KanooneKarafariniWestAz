@page
@model ServiceHost.Pages.IntroduceEntrepreneurModel

@{
    ViewData["Title"] = "معرفی کارآفرینان";
}

<section class="container-fluid mt-3">
    <div class="container p-md-5 box p-4">
        <div class="row">
            <div class="col-lg-12 text-justify">
                <h4 class="mb-4 bt-color IRANSansWeb_Medium">لیست کافه های کانون کارآفرینی استان آذربایجان غربی</h4>


                <table class="table table-bordered table-hover table-striped">
                    <thead class="grad-bg text-white">
                        <tr>
                            <th>ردیف</th>
                            <th>تصویر</th>
                            <th>نام و نام خانوادگی</th>
                            <th>شغل/سمت</th>
                            <th>حوزه</th>
                            <th>توضیحات</th>
                            <th>دانلود رزومه</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.IntroduceEntrepreneur)
                    {
                        <tr>

                            <td>@item.Id</td>
                            <td>
                                <img src="~/Pictures/@item.Photo" style="width: 70px; height: 70px" />
                            </td>
                            <td>@item.Fullname</td>
                            <td>@item.Job</td>
                            <td>@item.StateTitle</td>
                            <td>@item.ResumeDescription</td>
                            <td>
                                <a class="btn btn-primary btn-lg" asp-page-handler="DownloadResume" asp-route-id="@item.Id">دانلود رزومه</a>
                            </td>

                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>